<% var page='' %>
<%include ../shared/header%>
<div class="row">
    <div class="col s4 center-align">
        <img class="large-margin-top" src="https://api.adorable.io/avatars/285/<%= user.email || 'user@email.com' %>.png"/>
    </div>
    <div class="col s8">
        <h2 class="cyan-text large-margin-top">
            <%= user.name || 'User' %>
        </h2>
        <div class="row">
            <div class="col s6">
                <h4>Email:</h4>
            </div>
            <div class="col s6">
                <h4><%= user.email || 'user@email.com' %></h4>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <h4>Date joined:</h4>
            </div>
            <div class="col s6">
                <h4><%= user.joined %></h4>
            </div>
        </div>
        <h2 class="cyan-text margin-top">
            Reviews
        </h2>
    </div>
</div>
<%include ../shared/footer%>

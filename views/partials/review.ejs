<div class="row">
    <div class="col <%=(page != 'Profile') ? 's12' : 's10'%>">
        <div class="row">
            <div class="col s8"><h5><u><a href='/albums/<%= review.albumid %>'><%= review.title %></a></u></h5></div>
            <div class="col s4 right-align"><h6 class="small-margin-top"><i><%= review.reviewDate %></i></h6></div>
        </div>
         <div class="row">
            <div class="col s12 grey-text text-darken-4"><i><%= review.text %></i></div>
        </div>       
        <div class="row">
            <div class="col s12 right-align">by <u><%= review.name %></u></div>
        </div> 
    </div>
    <% if (user.id && page == 'Profile') { %>
        <div class="col s2 grey lighten-3 delete-box center-align">
            <i class="margin-top fa fa-trash fa-2x mouseover" onClick="$('#modal_<%= review.id %>').modal('open')"></i>
        </div>
        <div id="modal_<%= review.id %>" class="modal">
            <div class="modal-content">
                <h4>Are you sure you want to delete this review?</h4>
                <div class="grey-text text-darken-4"><i><%= review.text %></i></div>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat red-text">Cancel</a>
                <a href="/reviews/delete/<%= review.id %>" class="modal-action modal-close waves-effect waves-green btn-flat green-text text-darken-3">Agree</a>
            </div>
        </div>
    <% } %>

</div>